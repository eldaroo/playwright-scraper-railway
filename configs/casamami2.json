{
    "site_name": "Casa Mami 2",
    "base_url": "https://casamami.com.ar",
    "use_predefined_urls": true,
    "urls": [
      "https://casamami.com.ar/categor%C3%ADa-producto/bijouterie/otros-bijouterie/"
    ],
    "auth_config": {
      "login_url": "https://casamami.com.ar/mi-cuenta/",
      "login_button_selector": "a[title='Acceder']",
      "form_selectors": {
        "username": "#username",
        "password": "#password"
      },
      "submit_button": ".woocommerce-form-login__submit",
      "credentials": {
        "username": "darioegea@gmail.com",
        "password": "Dariowinner_90"
      },
      "success_check": {
        "selector": "a[href*='mi-cuenta'], .woocommerce-MyAccount-content",
        "timeout": 20000
      }
    },
    "crawler_params": {
      "headless": true,
      "defaultViewport": {
        "width": 1280,
        "height": 800
      },   
      "args": [
        "--user-agent=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
        "--disable-extensions",
        "--disable-dev-shm-usage",
        "--no-sandbox",
        "--disable-gpu"
    ]
    },
    "pagination": {
        "selector": null,
        "attribute": null,
        "max_pages": 1
    }, 
    "pre_actions": [
        { "type": "waitForLoadState", "state": "domcontentloaded" },
        { "type": "waitForSelector", "selector": "div.product-small.col.has-hover.product", "timeout": 10000 },
        { "type": "scroll", "direction": "down", "amount": 10 },
        { "type": "waitForTimeout", "timeout": 5000 },
        { "type": "evaluate", "script": "window.scrollTo(0, 0);" },
        { "type": "waitForTimeout", "timeout": 2000 }
    ],
    "post_actions": [],
    "extraction_config": {
      "type": "json_css",
      "params": {
        "schema": {
          "name": "Casa Mami 2",
          "baseSelector": "div.product-small.col.has-hover.product",
          "fields": [
            {
              "name": "title",
              "selector": "p.name.product-title.woocommerce-loop-product__title a",
              "type": "text",
              "transform": "return data.trim();"
            },
            {
              "name": "price",
              "selector": "div.price-wrapper span.price",
              "type": "text",
              "transform": "if (!data) return null; const m=data.match(/([\\d\\.]+,[\\d]+)/g); return m ? m.pop() : data;"
            },
            {
              "name": "image",
              "selector": "img",
              "type": "attribute",
              "attribute": "src",
              "transform": "let val = data; const attrs = ['data-src', 'data-srcset', 'srcset', 'data-lazy-src', 'data-original', 'data-lazy-srcset']; for (const attr of attrs) { if (!val || val.includes('%3Csvg') || val.startsWith('data:image/svg+xml')) { val = element.getAttribute(attr); } } if (!val || val.includes('%3Csvg') || val.startsWith('data:image/svg+xml')) { const container = element.closest('.product-small') || element.closest('.col'); const imgs = container ? container.querySelectorAll('img') : []; for (const img of imgs) { for (const attr of ['src', ...attrs]) { const imgSrc = img.getAttribute(attr); if (imgSrc && !imgSrc.includes('%3Csvg') && !imgSrc.startsWith('data:image/svg+xml') && (imgSrc.includes('.jpg') || imgSrc.includes('.jpeg') || imgSrc.includes('.png') || imgSrc.includes('.webp'))) { val = imgSrc; break; } } if (val && !val.includes('%3Csvg')) break; } } if (val && val.includes(',')) { val = val.split(',').find(v => v.includes('.jpg') || v.includes('.jpeg') || v.includes('.png') || v.includes('.webp')) || val.split(',')[0]; val = val.trim().split(' ')[0]; } return (val && !val.includes('%3Csvg') && !val.startsWith('data:image/svg+xml')) ? val : null;"
            },
            {
              "name": "url",
              "selector": "p.name.product-title.woocommerce-loop-product__title a",
              "type": "attribute",
              "attribute": "href"
            },
            {
              "name": "status",
              "selector": ".button.alt.options-vars",
              "type": "text",
              "transform": "return data && data.toLowerCase().includes('ver opciones') ? 'in_stock' : 'out_of_stock';"
            },
            {
              "name": "category",
              "type": "url_extract",
              "pattern": "categor%C3%ADa-producto/[^/]+/([^/]+)",
              "transform": "return data.replace(/-/g, ' ');"
            },
            {
              "name": "source_url",
              "type": "url"
            },
            {
              "name": "scraped_at",
              "type": "timestamp"
            },
            {
              "name": "site_name",
              "type": "constant",
              "value": "Casa Mami 2"
            }
          ]
        },
        "verbose": true
      }
    },
    "cache_mode": "bypass",
    "semaphore_count": 1,
    "request_delay": 1000,
    "verbose": true,
    "max_products": 5
  }